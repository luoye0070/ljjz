<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_bitmap"  >
    
    <!-- 标题 -->
        
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="用户注册"
            android:layout_marginBottom="10dp"
            android:id="@+id/userAy_title"></TextView>
    
	<!-- 用户名 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="用  户  名："/>
        <EditText android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:inputType="text" 
            android:id="@+id/userAy_nameEt"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/je_et_bg"
            />
    </LinearLayout>
    
    <!-- 密码 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#ad1559"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="密       码："/>
        <EditText android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:inputType="textPassword" 
            android:id="@+id/userAy_pwEt"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/bz_et_bg"
            />
    </LinearLayout>
    
    <!-- 确认 密码 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/userAy_rpwLl">
        <TextView android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="确认密码："/>
        <EditText android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:inputType="textPassword"
            android:id="@+id/userAy_rpwEt"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/je_et_bg"
            />
    </LinearLayout>
    
    <!-- 是否保留本地数据 -->
    <CheckBox android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAy_rememberPw"
        android:text="记住密码"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1ff70f"/>   

    <!-- 操作按钮组 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <!-- 登录 -->
        <Button android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/userAy_submitBt"
            android:text="添加用户"
            android:gravity="center"
            android:textColor="#2419fe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/tj_bt_selector_bg"></Button>
        
    </LinearLayout>
    <!-- 同步数据 -->
    <TextView android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#ad1592"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="仅同步"
            android:id="@+id/userAy_jtb"/>
</LinearLayout>
